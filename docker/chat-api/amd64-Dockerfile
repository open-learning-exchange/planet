FROM treehouses/node

RUN apk update ;\
    apk add --no-cache bash curl git jq ca-certificates

RUN ls -la

WORKDIR /root

# RUN npm install -g typescript
RUN ls -la

# Install dependencies
COPY ./gpt-proxy/package*.json /root/gpt-proxy/
RUN cd /root/gpt-proxy && npm install

RUN ls -la

# Copy the application code
COPY ./gpt-proxy/src /root/gpt-proxy/src/
COPY ./gpt-proxy/tsconfig.json /root/gpt-proxy/tsconfig.json

# # Build the TypeScript code
# RUN cd gpt-proxy && npm run build

CMD ["npm", "run", "dev"]
