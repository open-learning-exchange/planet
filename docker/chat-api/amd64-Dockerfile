FROM treehouses/node

RUN apk update ;\
    apk add --no-cache bash curl git jq ca-certificates

RUN npm install -g typescript

RUN ls -l

RUN pwd

WORKDIR /root/gpt-proxy

RUN ls -l

RUN pwd

RUN npm install

COPY ./docker/chat-api/docker-entrypoint.sh /root/gpt-proxy/docker-entrypoint.sh

CMD npm run dev
